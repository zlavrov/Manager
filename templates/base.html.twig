<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Manager{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('styles/bootstrap.min.css') }}"/>
        <link rel="stylesheet" href="{{ asset('styles/style.css') }}"/>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        
    </head>
    <body class="text-center">

        <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
            <div class="container-fluid">
                <img src="{{ asset('svg/rat_white.svg') }}" alt="logo">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('TaskList') }}">MyTask</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('TaskCreate') }}">Create</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <div class="bd-example">
                            <div class="btn-group">
                                {% if app.user %}
                                    <a class="btn btn-outline-success" href="{{ path('app_logout') }}">LogOut</a>
                                {% else %}
                                    <a class="btn btn-outline-success" href="{{ path('app_login') }}">Login</a>
                                    <a class="btn btn-outline-success" href="{{ path('app_register') }}">Register</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        {% block body %}{% endblock %}
        <script src="{{ asset('scripts/bootstrap.bundle.min.js') }}"></script>
    </body>
</html>
